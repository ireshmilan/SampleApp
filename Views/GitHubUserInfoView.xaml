<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleApp.Views.GitHubUserInfoView"
             Title="Hell GitHub User">
    <VerticalStackLayout Margin="30,0">
        <Entry Margin="0,40,0,20" Text="{Binding GiHubuserName}" />
        <Button Text="Get My Info" Command="{Binding GetMyInfoCommand}"/>

        <VerticalStackLayout Spacing="20">
            <Image HeightRequest="200" WidthRequest="200" Margin="0,50,0,0" Source="{Binding Avatar}"/>

            <Label Text="{Binding DisplayName}" FontAttributes="Bold"/>
            <Label Text="{Binding Bio}"/>
            <Label Text="{Binding Country}"/>
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>
